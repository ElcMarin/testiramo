@model userEntity

<form method="post" asp-action="EditUser">
    <input asp-for="id_user" hidden/>
    <div class="border p-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black">Edit the user</h2>
        </div>
        <br/>
        <div class="row">
            <div class="col-4">
                <label asp-for="name"></label>
                <input required="" asp-for="name" class="form-control"/>
                <span asp-validation-for="name"></span>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-4">
                <label asp-for="lastname"></label>
                <input required="" asp-for="lastname" class="form-control"/>
                <span asp-validation-for="lastname"></span>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-4">
                <label asp-for="email"></label>
                <input required="" asp-for="email" class="form-control"/>
                <span asp-validation-for="email"></span>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-4">
                            <label>Password (Hashed)</label>
                            <input disabled asp-for="password" class="form-control"/>
                        </div>
            
            <!-- <div class="col-4">
                <label asp-for="password"></label>
                <input required="" asp-for="password" class="form-control"/>
                <span asp-validation-for="password"></span>
            </div>
            -->
        </div>
        <br/>
        <div class="w-12 btn-group" role="group">
            <input type="submit" class="btn btn-primary mx-1">
                <a asp-action="Users" class="btn btn-primary">Back to List</a>
            </input>
        </div>
    </div>
</form>