@model adminEntity

<div class="containerAdminHair">
    <form method="post" asp-action="Edit">
        <input asp-for="id_admin" hidden/>
        <div class="bordered spaceIn  rounded size backgroundColor  twoGrid">
            <div class="posCenter">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <h2 class="text-black">Edit Admin</h2>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label asp-for="name">Name:</label>
                        <input required asp-for="name" class="form-control zweiHundert"/>
                        <span asp-validation-for="name"></span>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-4">
                        <label asp-for="lastname"></label>
                        <input required asp-for="lastname" class="form-control zweiHundert"/>
                        <span asp-validation-for="lastname"></span>
                    </div>
                </div>

                <br/>
                <div class="row">
                    <div class="col-4">
                        <label asp-for="email"></label>
                        <input required asp-for="email" class="form-control zweiHundert"/>
                        <span asp-validation-for="email"></span>
                    </div>
                </div>
                <br/>
               
                <br/>
                <div class="row">
                    <div class="w-12 btn-group" role="group">
                        <input type="submit" class="btn btn-primary mx-1 twoButtons">
                        <a asp-action="Admins" class="btn btn-primary twoButtons">Back to List</a>
                    </div>
                </div>
            </div>
            

            <div class="rightSide posCenter">
                <img class="image450" src="~/Img/editingProfile.webp" alt="styles">
                
            </div>
        </div>
        
    </form>
</div>


