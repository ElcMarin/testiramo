@model IEnumerable<userEntity>


<div class="containerAdmin mid" >
    <div class="row pt=4">
        <div class="col-9">
            <h2 class="text-success">
                Users overview
            </h2>
        </div>
        <div class="col-12 text-lg-end">
           
        </div>
    </div>

    <br />

    @if(Model != null && Model.Count() > 0)
    {
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>Lastname</th>
                <th>Email</th>
                <th> <a asp-controller="Admin" asp-action="CreateUser" class="btn adminAdd btn-primary">Add user</a></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.name</td>
                    <td>@item.lastname</td>
                    <td>@item.email</td>
                    <td>
                        <div role="group" class="btn-group w-100">
                            <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@item.id_user" class="btn btn-primary mx-1">
                                Edit
                            </a>
                            <a class="btn btn-primary delete" asp-action="DeleteUser" asp-route-id="@item.id_user" onclick="return confirm('Are you sure you want to delete this User?')">Delete</a>
                        </div>
                    </td>
                </tr>
                        
            }
            </tbody>
        </table>
    }
    else
    {
        <p>no records found</p>
    }

</div>