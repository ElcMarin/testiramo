@model hairdresserEntity
<form method="post" asp-action="Profile" enctype="multipart/form-data">
    <h1 class="special-title">OUR FAVOURITE HAIRDRESSERS PROFILE</h1>
    <div class="profile-container">

        <div class="profile-picture">
            <!-- Placeholder for the profile picture -->
            <img id="profileImage" src="@ViewBag.File" alt="Profile Picture">

            <input type="file" name="fileName" accept=".png, .jpg, .jpeg" onchange="changeProfileImage(this)" />

            <!-- Add startdate and enddate -->
            <input asp-for="startTime" type="time" class="form-control" value="@Model.startTime" />
            <input asp-for="endTime" type="time" class="form-control" value="@Model.endTime" />

            <label class="data">Available for new appointments: <input asp-for="is_working" type="checkbox" /></label>
            <!-- prestavi v post ko bos naredil edit   <input type="file" name="fileName"/> -->
        </div>
        <div class="user-details">
            <h1>@Model.name.ToUpper() @Model.lastname.ToUpper()</h1>

            <label class="data"> <input asp-for="name" value="@Model.name"/> </label>

            <br/>
            <label class="data"><input asp-for="lastname" value="@Model.lastname"/> </label>
            <br/>

            <label class="data"><input asp-for="email" value="@Model.email"/> </label>
            <br/>
            <label class="data">Date of profile creation: @Model.created</label>
            <br/>
        </div>
        <div class="additional-info">
            <button type="submit" class="submitButton smallSpace">Submit</button>
            <br/>
            <br/>
            <button class="submitButton smallSpace" asp-action="Index">Back</button>
        </div>
    </div>
</form>

<script>

    function changeProfileImage(input) {
        console.log("changeProfileImage");
        var reader = new FileReader();

        reader.onload = function (e) {
            // Update the src attribute of the image with the new data URL
            document.getElementById('profileImage').src = e.target.result;
        };

        // Read the selected file as a data URL
        reader.readAsDataURL(input.files[0]);
    }
</script>